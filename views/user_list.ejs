<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <div class="heading-container"><h1>Users</h1></div>
            <ol>
                <% results.forEach(function(user) {%>
                    <ul class='user'>
                        <li>
                            <div class="user-container">
                            <div class="img-header">
                                <img
                                    src="<%= user.coverImageUrl %>" 
                                    alt="Cover image for <%= user.name %>" 
                                    >
                            </div>
                            <div class="user-list-heading">
                                <div class="img-container">
                                    <a href="/users/<%=user.id%>">
                                        <img
                                        class='profile-image' 
                                        src="<%= user.profileImageUrl %>" 
                                        alt="Profile image for <%= user.name %>" 
                                        width="50"
                                        height="50">
                                        <br>
                                    </a>
                                </div>
                                <div>
                                    <h3 class='name'><b><%= user.name %></b></h3>
                                </div>
                            </div>
                        </div>

                        <li><p class='user-info'><%= user.posts.length%> posts</p></li>
                        <li><p class='user-info'><%= user.likes.length%> likes</p></li>
                        <li><p class='user-info'><%= user.dislikes.length%> dislikes</p></li>
                    </ul>
                        <% }); %>
            </ol>
            <%if (next) { %>
                <a href="<%= next %>">Next</a>
                <% } %>
                    <%if (previous) { %>
                        <a href="<%= previous %>">Previous</a>
                        <% } %>
        </body>
        <%- include('_footer') -%>

</html>