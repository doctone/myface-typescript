<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Users</h1>
<ol>
    <% results.forEach(function(user) {%>
        <li>
            <a href="/users/<%=user.id%>">

                <img 
                src="<%= user.profileImageUrl %>" 
                alt="Profile image for <%= user.name %>" 
                width="50" 
                height="50">
                <br>
            </a>
            <h3><b><%= user.name %></b></h3>
            <em>
                <h5> <%= user.posts.length%> posts </h5>
                <h5><%= user.likes.length%> likes</h5>
                <h5><%= user.dislikes.length%> dislikes</h5>
            </em>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>