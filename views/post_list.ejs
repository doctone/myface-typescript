<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol>
    <% results.forEach(function(post) {%>
        <li>
            <img src="<%post.imageUrl%>" alt="Post image for <%post.postedBy.name%>" width="60" height="60">
            <p>
                <%= post.message %>
                <em>posted by <%post.postedBy.name%> on <%post.createdAt%></5></em>
            </p>
        </li>
    <% }); %>
</ol>
</body>
<%- include('_footer') -%>
</html>